{
    "compilerOptions": {
      /* Language and Environment */
      "target": "es2022",
      "module": "es2022",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
  
      "strict": true,
  
      "skipLibCheck": true,
      "types": ["node"],
      "outDir": "js",
      "declaration": true,
      "declarationMap": true
    },
  
    "include": ["ts/*.ts"],
    "exclude": ["node_modules/*", "public/*"]
  } 